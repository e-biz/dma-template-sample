<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#eee">

  <ImageView
      android:id="@+id/logo"
      android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:src="@drawable/fi_content_logo"
      android:layout_margin="20dp"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"/>
  <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_below="@+id/logo"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical">


      <Button
          android:id="@+id/sample_ods_btn"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="20dp"
          android:padding="20dp"
          android:text="@string/sample_ods"/>

      <Button
          android:id="@+id/sample_dfki_poi_client_btn"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="20dp"
          android:padding="20dp"
          android:text="@string/sample_dfki_poi_client"/>

      <Button
          android:id="@+id/sample_upb_prod_poi_proxy_btn"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="20dp"
          android:padding="20dp"
          android:text="@string/sample_upv_prod_poi_proxy"/>

      <Button
          android:id="@+id/sample_pp_socialnetwork"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="20dp"
          android:padding="20dp"
          android:text="@string/sample_pixelpark_ppnet"/>

    </LinearLayout>
  </ScrollView>
</RelativeLayout>